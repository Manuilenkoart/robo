{
  "compilerOptions": {
    "target": "es6",
    "downlevelIteration": true,
    "module": "commonjs",
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "plugins": [
      {
        "name": "tsconfig-paths",
        "afterDeclarations": true
      }
    ]
  },
  "include": [
    "src/**/*.ts"
  ]
}
